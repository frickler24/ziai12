## Use nginx as loadbalancer.
# Load balancing in the docker swarm is done by the swarm manager,
# but in addition we have a service implemented on s3.

# Backend
upstream server_backend  {
      server 172.17.0.1:8080; # Webserver farm based on docker swarm
# Hier muss noch der s3-Link rein, weenn der andere Kram funzt
}


## Frontend - Reverse Proxy ##
server {
	listen 80 default_server;
	listen [::]:80 default_server;
 
    access_log  /var/log/nginx/log/www.example.access.log  main;
    error_log  /var/log/nginx/log/www.example.error.log;
 
    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;
    server_name $HOSTNAME;


    ## Definition Reverse Proxy ##
    location / {
     proxy_pass  http://server_backend;
     proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
     proxy_redirect off;
     proxy_buffering off;
     proxy_set_header        Host            $host;
     proxy_set_header        X-Real-IP       $remote_addr;
     proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
   }
}
